module bcdadder(A,B,Cin,Bcd,Outc);


    input [3:0] A,B;
    input Cin;
    output [3:0] Bcd;
    output Outc;
    
    reg [4:0] sum_temp; 
    reg [3:0] Bcd;
    reg Outc;
    always @(A,B,Cin)
    begin
        sum_temp = A+B+Cin; 
        if(sum_temp > 9)    begin
            sum_temp = sum_temp+6; 
            Outc = 1;  
            Bcd = sum_temp[3:0];    end
        else    begin
            Outc = 0;
            Bcd = sum_temp[3:0];
        end
    end     

endmodule
